<div class="container">

    <div class="row">

        <div class="six columns">
            <form method="POST" action="/action">
                <h5>Bill type</h5>
                <label class="">
                    <input type="radio" name="billItemType" class="billItemTypeWithSettings" value="call">
                    <span class="label-body">Call</span>
                </label>
                <label class="">
                    <input type="radio" name="billItemType" class="billItemTypeWithSettings" value="sms">
                    <span class="label-body">SMS</span>
                </label>
                <button class="button-primary" type="submit" name="button">Add</button>
            </form>
            <h5>Totals</h5>
            <table>
                <tr>
                    <td>
                        <a href="/actions/call">Call total</a>
                    </td>
                    <td>R
                        <span class="callTotalSettings">{{this.totals.call}}</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="/actions/sms">SMS total</a>
                    </td>
                    <td>R



                        <span class="smsTotalSettings">{{this.totals.sms}}</span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="/actions">Total</a>
                    </td>
                    <td> R
                        <span class="totalSettings {{this.totals.class}}">{{this.totals.billTotal}}</span>
                    </td>
                </tr>
            </table>

        </div>
        <div class="six columns">
            <h5>Settings</h5>
            <form method="POST" action="/settings">

                <label for="exampleEmailInput">Call cost</label>
                <input class="u-full-width callCostSetting" type="number" placeholder="eg. 2.55" name="callCost" step="0.01" value={{this.settings.call}}>
                <label for="exampleEmailInput">SMS cost</label>
                <input class="u-full-width smsCostSetting" type="number" placeholder="eg. 0.65" name="smsCost" step="0.01" value={{this.settings.sms}}>
                <label for="">Warning level</label>
                <input class="u-full-width warningLevelSetting " type="number" placeholder="eg. 30.00" class="warningLevel" name="warningLevel"
                    step="0.01" value={{this.settings.warning}}>
                <label for="">Critical level</label>
                <input class="u-full-width criticalLevelSetting" type="number" placeholder="eg. 65.00" name="criticalLevel" step="0.01" value={{this.settings.critical}}>
                <button class="button-primary updateSettings" type="submit" name="button" value="submit">Update settings</button>
            </form>


        </div>
    </div>
</div>